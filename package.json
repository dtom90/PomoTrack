{
  "name": "pomodash",
  "displayName": "Pomodash",
  "description": "A pomodoro timer app with task tracking",
  "author": {
    "name": "David Thomason",
    "url": "https://davidthomason.com/"
  },
  "homepage": "https://github.com/dtom90/PomoTrack",
  "repository": "https://github.com/dtom90/PomoTrack",
  "version": "0.18.9",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "npm run build-only && npm run type-check",
    "build-only": "vite build --outDir dist_web",
    "type-check": "vue-tsc --build",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build:beta": "npm run build && electron-builder --mac --dir -c.productName=\"PomodashBeta\" -c.appId=\"app.pomodashbeta\"",
    "electron:run:beta": "./dist_electron/mac/PomodashBeta.app/Contents/MacOS/PomodashBeta --inspect",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mas": "npm run build && electron-builder --config electron-builder.mas.yml",
    "capacitor:sync": "npm run build && npx cap sync ios",
    "test:basic": "npm audit && npm run type-check && npm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cy:open": "cypress open",
    "cy:run": "cypress run -b chrome"
  },
  "dependencies": {
    "@capacitor/cli": "^7.2.0",
    "@capacitor/core": "^7.2.0",
    "@capacitor/ios": "^7.2.0",
    "@capacitor/status-bar": "^7.0.1",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "bootstrap": "^5.3.5",
    "bootstrap-vue-next": "^0.29.1",
    "chartjs-plugin-annotation": "^3.1.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "color-manager": "https://github.com/dtom90/color-manager",
    "dexie": "^4.0.11",
    "dompurify": "^3.2.5",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "humanize-duration": "^3.32.1",
    "lodash.clonedeep": "^4.5.0",
    "marked": "^15.0.11",
    "sass": "^1.87.0",
    "tinycolor2": "^1.6.0",
    "vue": "^3.5.13",
    "vue-chartjs": "^5.3.2",
    "vue-color": "^3.0.1",
    "vue-ctk-date-time-picker": "^3.0.0-alpha.0",
    "vuedraggable": "^4.1.0",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@4tw/cypress-drag-drop": "^2.3.0",
    "@electron/notarize": "^3.0.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/humanize-duration": "^3.27.4",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/node": "^22.14.0",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "cypress": "^14.3.2",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "typescript": "~5.8.0",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8"
  },
  "build": {
    "appId": "app.pomodash",
    "productName": "Pomodash",
    "publish": "github",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist_web/**/*",
      "electron.js",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "afterSign": "./notarize.js"
  }
}
